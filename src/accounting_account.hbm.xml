<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.kaartenbalie.core.server.accounting.entity.Account" table="acc_account">
        
        <id name="id" type="int" column="acc_id" >
            <generator class="foreign">
                <param name="property">organization</param>
            </generator>
        </id>
        <one-to-one name="organization" constrained="true" class="nl.b3p.kaartenbalie.core.server.Organization"/>
        <set name="transactions" > 
            <key column="tra_acc_id"/> 
            <one-to-many class="nl.b3p.kaartenbalie.core.server.accounting.entity.Transaction"/> 
        </set>
        
        <property name="creditBalance">
            <column name="acc_creditBalance" precision="15" scale="2" />
        </property>
        
        
    </class>
</hibernate-mapping>