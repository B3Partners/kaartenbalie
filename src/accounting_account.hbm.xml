<hibernate-mapping>
  <class name="nl.b3p.kaartenbalie.core.server.accounting.entity.Account" table="acc_account">
    <id column="acc_id" name="id" type="int">
      <generator class="foreign">
        <param name="property">organization</param>
      </generator>
    </id>
    <one-to-one class="nl.b3p.kaartenbalie.core.server.Organization" constrained="true" name="organization"/>
    <set name="transactions">
      <key column="tra_acc_id"/>
      <one-to-many class="nl.b3p.kaartenbalie.core.server.accounting.entity.Transaction"/>
    </set>
    <property name="creditBalance">
      <column name="acc_creditBalance" precision="15" scale="2"/>
    </property>
  </class>
</hibernate-mapping>
