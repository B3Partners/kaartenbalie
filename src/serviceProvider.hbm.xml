<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.wms.capabilities.ServiceProvider" table="ServiceProvider">
        <id name="id" type="int" column="SERVICEPROVIDERID">
            <generator class="native"/>
        </id>
        
        <one-to-one name="contactInformation"
                    class="nl.b3p.wms.capabilities.ContactInformation"
                    cascade="all"                    
        />
        
        <set name="layers" inverse="true" cascade="all" lazy="true">
            <key column="SERVICEPROVIDERID"/>
            <one-to-many class="nl.b3p.wms.capabilities.Layer"/>
        </set>
        
        <set name="serviceProviderKeywordList" cascade="all" lazy="true" table="serviceproviderkeywordlist">
            <key column="SERVICEPROVIDERID"/>
            <element column="KEYWORD" type="string" not-null="true" length="50"/>
        </set>
     
        <set name="domainResource" inverse="true" cascade="all" lazy="true" table="serviceDomainResource" >
            <key column="SERVICEPROVIDERID"/>
            <one-to-many class="nl.b3p.wms.capabilities.ServiceDomainResource"/>
        </set>
        
        <set name="exceptions" cascade="all" lazy="true" table="exceptions">
            <key column="SERVICEPROVIDERID"/>
            <element column="FORMAT" type="string" not-null="true" length="50"/>
        </set>
        
        <property name="name">
            <column name="NAME" default="0" not-null="true" length="60"/>
        </property>
        <property name="abbr">
            <column name="ABBR" default="0" not-null="true" length="60"/>
        </property>
        <property name="title">
            <column name="TITLE" default="0" not-null="true" length="255"/>
        </property>
        <property name="abstracts" type="text">
            <column name="ABSTRACTS" length="65530"/>
        </property>
        <property name="fees" type="text">
            <column name="FEES" length="65530"/>
        </property>
        <property name="accessConstraints" type="text">
            <column name="ACCESSCONSTRAINTS" length="65530"/>
        </property>
        <property name="givenName">
            <column name="GIVENNAME" not-null="true" default="0" length="50"/>
        </property>
        <property name="url">
            <column name="URL" default="0" not-null="true"  length="4000"/>
        </property>
        <property name="updatedDate">
            <column name="UPDATEDDATE" not-null="true" />
        </property>
        <property name="wmsVersion">
            <column name="WMSVERSION" not-null="true" default="0" length="50"/>
        </property>
    </class>
</hibernate-mapping>