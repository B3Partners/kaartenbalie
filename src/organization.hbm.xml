<hibernate-mapping>
  <class name="nl.b3p.kaartenbalie.core.server.Organization" table="Organization">
    <id column="ORGANIZATIONID" name="id" type="int">
      <generator class="native"/>
    </id>
    <set lazy="false" name="organizationLayer" order-by="LAYERID ASC" table="OrganizationLayer">
      <key column="ORGANIZATIONID"/>
      <many-to-many class="nl.b3p.wms.capabilities.Layer" column="LAYERID" lazy="false"/>
    </set>
    <set lazy="false" name="wfsOrganizationLayer" order-by="WFSLAYERID ASC" table="Wfs_OrganizationLayer">
      <key column="ORGANIZATIONID"/>
      <many-to-many class="nl.b3p.ogc.wfs.v110.WfsLayer" column="WFSLAYERID" lazy="false"/>
    </set>
    <set cascade="delete" inverse="true" lazy="false" name="user">
      <key column="ORGANIZATIONID"/>
      <one-to-many class="nl.b3p.kaartenbalie.core.server.User"/>
    </set>
    <set cascade="all, delete-orphan" inverse="true" name="reports">
      <key column="rpd_org_id"/>
      <one-to-many class="nl.b3p.kaartenbalie.core.server.reporting.domain.BaseReport"/>
    </set>
    <set cascade="all, delete-orphan" inverse="true" name="reportStatus">
      <key column="sta_org_id"/>
      <one-to-many class="nl.b3p.kaartenbalie.core.server.reporting.domain.ThreadReportStatus"/>
    </set>
    <one-to-one cascade="all" class="nl.b3p.kaartenbalie.core.server.accounting.entity.Account" fetch="join" lazy="false" name="account"/>
    <property name="name">
      <column default="0" length="50" name="NAME" not-null="true"/>
    </property>
    <property name="street">
      <column default="0" length="50" name="STREET"/>
    </property>
    <property name="number">
      <column default="0" length="5" name="NUMBER"/>
    </property>
    <property name="addition">
      <column length="10" name="ADDITION"/>
    </property>
    <property name="postalcode">
      <column length="45" name="POSTALCODE"/>
    </property>
    <property name="province">
      <column default="0" length="50" name="PROVINCE"/>
    </property>
    <property name="country">
      <column default="0" length="50" name="COUNTRY"/>
    </property>
    <property name="postbox">
      <column length="50" name="POSTBOX"/>
    </property>
    <property name="billingAddress">
      <column length="50" name="BILLINGADDRESS"/>
    </property>
    <property name="visitorsAddress">
      <column length="50" name="VISITORSADDRESS"/>
    </property>
    <property name="telephone">
      <column default="0" length="50" name="TELEPHONE" not-null="true"/>
    </property>
    <property name="fax">
      <column length="50" name="FAX"/>
    </property>
    <property name="hasValidGetCapabilities">
      <column name="HASVALIDGETCAPABILITIES" not-null="true" sql-type="tinyint"/>
    </property>
    <property name="bbox">
      <column length="50" name="BBOX"/>
    </property>
    <property name="code">
      <column length="50" name="CODE"/>
    </property>
    <property name="allowAccountingLayers">
      <column name="ALLOWACCOUNTINGLAYERS" sql-type="tinyint"/>
    </property>
  </class>
</hibernate-mapping>
