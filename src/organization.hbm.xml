<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.kaartenbalie.core.server.Organization" table="Organization">
        <id name="id" type="int" column="ORGANIZATIONID" >
            <generator class="native"/>
        </id>
        <set name="organizationLayer" table="OrganizationLayer" lazy="false" order-by="LAYERID ASC">
            <key column="ORGANIZATIONID"/>
            <many-to-many column="LAYERID" class="nl.b3p.wms.capabilities.Layer" lazy="false"/>
        </set>
        <set name="wfsOrganizationLayer" table="Wfs_OrganizationLayer" lazy="false" order-by="WFSLAYERID ASC">
            <key column="ORGANIZATIONID"/>
            <many-to-many column="WFSLAYERID" class="nl.b3p.ogc.wfs.v110.WfsLayer" lazy="false"/>
        </set>
        
        <set name="user" lazy="false" inverse="true" cascade="delete">
            <key column="ORGANIZATIONID"/>
            <one-to-many class="nl.b3p.kaartenbalie.core.server.User"/>
        </set>
        <set name="reports" inverse="true" cascade="all, delete-orphan">
            <key column="rpd_org_id"/>
            <one-to-many class="nl.b3p.kaartenbalie.core.server.reporting.domain.BaseReport"/>
        </set>   
        <set name="reportStatus" inverse="true" cascade="all, delete-orphan">
            <key column="sta_org_id"/>
            <one-to-many class="nl.b3p.kaartenbalie.core.server.reporting.domain.ThreadReportStatus"/>
        </set>            

        <one-to-one name="account"
                    class="nl.b3p.kaartenbalie.core.server.accounting.entity.Account"
                    cascade="all"                    
                    fetch="join"
                    lazy="false"
        />
        
        <property name="name">
            <column name="NAME" default="0" length="50" not-null="true"/>
        </property>
        <property name="street">
            <column name="STREET" default="0" length="50"/>
        </property>
        <property name="number">
            <column name="NUMBER" default="0" length="5" />
        </property>
        <property name="addition">
            <column name="ADDITION" length="10"/>
        </property>
        <property name="postalcode">
            <column name="POSTALCODE" length="45"/>
        </property>
        <property name="province">
            <column name="PROVINCE" default="0" length="50"/>
        </property>
        <property name="country">
            <column name="COUNTRY" default="0" length="50"/>
        </property>
        <property name="postbox">
            <column name="POSTBOX" length="50"/>
        </property>
        <property name="billingAddress">
            <column name="BILLINGADDRESS" length="50"/>
        </property>
        <property name="visitorsAddress">
            <column name="VISITORSADDRESS" length="50"/>
        </property>
        <property name="telephone" >
            <column name="TELEPHONE" default="0" length="50" not-null="true"/>
        </property>
        <property name="fax">
            <column name="FAX" length="50"/>
        </property>
        <property name="hasValidGetCapabilities" >
            <column name="HASVALIDGETCAPABILITIES" not-null="true" sql-type="tinyint"/>
        </property>
        <property name="bbox" >
            <column name="BBOX" length="50"/>
        </property>
        <property name="code" >
            <column name="CODE" length="50"/>
        </property>
        <property name="allowAccountingLayers" >
            <column name="ALLOWACCOUNTINGLAYERS" sql-type="tinyint"/>
        </property>
    </class>
</hibernate-mapping>