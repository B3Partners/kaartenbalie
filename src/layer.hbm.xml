<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.wms.capabilities.Layer" table="Layer">
    	<id name="id" type="int" length="10">
            <!-- sql-type="INTEGER UNSIGNED"-->
            <column name="LAYERID"/>
            <generator class="native" />
        </id>
        
        <many-to-one name="parent" column="PARENTID" class="nl.b3p.wms.capabilities.Layer" />
        

        <set name="layers" inverse="true" cascade="all-delete-orphan" order-by="name"> 
            <key column="PARENTID" /> 
            <one-to-many class="nl.b3p.wms.capabilities.Layer"></one-to-many>
            
        </set>        
        
        <set name="dimensions" inverse="true" cascade="all">
            <key column="LAYERID"/>
            <one-to-many class="nl.b3p.wms.capabilities.Dimensions"/>
        </set>
        
        <set name="layerKeywordList" cascade="all" table="layerkeywordlist">
            <key column="LAYERID"/>
            <element column="KEYWORD" type="string" not-null="true" length="50"/>
        </set>
                
        <set name="styles" inverse="true" cascade="all" table="">
            <key column="LAYERID"/>
            <one-to-many class="nl.b3p.wms.capabilities.Style"/>
        </set>
        
        <set name="domainResource" inverse="true" cascade="all">
            <key column="LAYERID"/>
            <one-to-many class="nl.b3p.wms.capabilities.LayerDomainResource"/>
        </set>
        
        <set name="identifiers" inverse="true" cascade="all" >
            <key column="LAYERID"/>
            <one-to-many class="nl.b3p.wms.capabilities.Identifier"/>
        </set>
                
        <set name="srsbb" inverse="true" cascade="all" lazy="false" >
            <key column="LAYERID"/>
            <one-to-many class="nl.b3p.wms.capabilities.SrsBoundingBox"/>
        </set>
        
        <one-to-one name="attribution"
                    class="nl.b3p.wms.capabilities.Attribution"
                    cascade="all"                    
                    fetch="join"
                    lazy="false"
        />
        
        
        
        <many-to-one name="serviceProvider" column="SERVICEPROVIDERID" not-null="true"/><!--   /-->
                
        <property name="name">
            <column name="NAME" length="200"/>
        </property>
        <property name="title">
            <column name="TITLE"  not-null="true" length="255" default="0"/>
        </property>
        <property name="abstracts" type="text">
            <column name="ABSTRACTS" length="65530"/>
        </property>
        <property name="queryable">
            <column name="QUERYABLE" default="0" length="50" />
        </property>
        <property name="cascaded">
            <column name="CASCADED" default="0" length="50" />
        </property>
        <property name="opaque">
            <column name="OPAQUE" default="0" length="50" />
        </property>
        <property name="nosubsets">
            <column name="NOSUBSETS" default="0" length="50"/>
        </property>
        <property name="fixedWidth">
            <column name="FIXEDWIDTH" default="0" length="50"/>
        </property>
        <property name="fixedHeight">
            <column name="FIXEDHEIGHT" default="0" length="50" />
        </property>
        <property name="scaleHintMin">
            <column name="SCALEHINTMIN" default="0" length="50" />
        </property>
        <property name="scaleHintMax">
            <column name="SCALEHINTMAX" default="0" length="50"/>
        </property>
        <property name="metaData" type="text">
            <column name="METADATA" length="65530"/>
        </property>
    </class>
</hibernate-mapping>