<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.wms.capabilities.LayerDomainResource" table="LayerDomainResource">        
        <id name="id" type="int" column="LDRID" >
            <generator class="native"/>
        </id>
        
        <many-to-one name="layer" column="LAYERID" not-null="true"/>
        
        <set name="formats" lazy="true" table="LayerDomainFormat">
            <key column="LDRID" not-null="true"/>
            <element column="format" type="string" not-null="true" length="100"/>
        </set>
        
        <property name="domain">
            <column name="DOMAIN" not-null="true" default="0" length="50"/>
        </property>
        <property name="url">
            <column name="URL" not-null="true" length="4000"/>
        </property>
    </class>
</hibernate-mapping>