<hibernate-mapping>
  <class name="nl.b3p.kaartenbalie.core.server.User" table="User">
    <id name="id" type="int">
      <column name="USERID"/>
      <generator class="native"/>
    </id>
    <many-to-one column="ORGANIZATIONID" lazy="false" name="organization" not-null="true"/>
    <set lazy="false" name="userroles" table="Userroles">
      <key column="USERID"/>
      <many-to-many class="nl.b3p.wms.capabilities.Roles" column="ROLEID" lazy="false"/>
    </set>
    <set cascade="all" lazy="false" name="userips" table="userip">
      <key column="USERID"/>
      <element column="IPADDRESS" length="45" not-null="true" type="string"/>
    </set>
    <property name="firstName">
      <column default="0" length="50" name="FIRSTNAME" not-null="true"/>
    </property>
    <property name="surname">
      <column default="0" length="50" name="LASTNAME" not-null="true"/>
    </property>
    <property name="emailAddress">
      <column default="0" length="50" name="EMAILADDRESS" not-null="true"/>
    </property>
    <property name="username">
      <column default="0" length="50" name="USERNAME" not-null="true"/>
    </property>
    <property name="password">
      <column default="0" length="50" name="PASSWORD" not-null="true"/>
    </property>
    <property name="personalURL">
      <column length="4000" name="PERSONALURL"/>
    </property>
    <property name="timeout">
      <column name="TIMEOUT"/>
    </property>
    <property name="defaultGetMap">
      <column length="4000" name="DEFAULTGETMAP"/>
    </property>
  </class>
</hibernate-mapping>
