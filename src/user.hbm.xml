<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.kaartenbalie.core.server.User" table="User">
    	<id name="id" type="int">
            <column name="USERID" />
            <generator class="native" />
        </id>
        
        <many-to-one name="organization" column="ORGANIZATIONID" not-null="true" insert="true" update="true" lazy="false"/>
        
        
        <set name="userroles" table="Userroles" lazy="false">
            <key column="USERID"/>
            <many-to-many column="ROLEID" class="nl.b3p.wms.capabilities.Roles" lazy="false"/>
        </set>
        
        <set name="userips" cascade="all" table="userip">
            <key column="USERID"/>
            <element column="IPADDRESS" type="string" length="45" not-null="true"/>
        </set>
        
        
        <property name="firstName">
            <column name="FIRSTNAME" not-null="true" default="0" length="50"/>
        </property>
        <property name="surname">
            <column name="LASTNAME" not-null="true" default="0" length="50"/>
        </property>
        <property name="emailAddress">
            <column name="EMAILADDRESS" not-null="true" default="0" length="50"/>
        </property>
        <property name="username">
            <column name="USERNAME" not-null="true" default="0" length="50"/>
        </property>
        <property name="password">
            <column name="PASSWORD" not-null="true" default="0" length="50"/>
        </property>
        <property name="personalURL">
            <column name="PERSONALURL" length="4000"/>
        </property>
        <property name="timeout">
            <column name="TIMEOUT"/>
        </property>
        <property name="defaultGetMap">
            <column name="DEFAULTGETMAP" length="4000"/>
        </property>
    </class>
</hibernate-mapping>