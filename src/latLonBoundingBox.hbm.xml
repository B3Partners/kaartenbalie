<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.kaartenbalie.core.server.LatLonBoundingBox" table="LatLonBoundingBox">
    	<id name="id" type="int" column="LAYERID">
            <generator class="foreign">
                <param name="property">layer</param>
            </generator>
        </id>
        
        <one-to-one name="layer" constrained="true" class="nl.b3p.kaartenbalie.core.server.Layer" />
        
        <property name="minx">
            <column name="MINX"/>
        </property>
        <property name="maxx">
            <column name="MAXX"/>
        </property>
        <property name="miny">
            <column name="MINY"/>
        </property>
        <property name="maxy">
            <column name="MAXY"/>
        </property>
    </class>
</hibernate-mapping>