<hibernate-mapping>
  <class name="nl.b3p.wms.capabilities.SrsBoundingBox" table="SRS">
    <id column="SRSID" name="id" type="int">
      <generator class="native"/>
    </id>
    <many-to-one column="LAYERID" name="layer" not-null="true"/>
    <property name="srs">
      <column length="150" name="SRS"/>
    </property>
    <property name="minx">
      <column length="50" name="MINX"/>
    </property>
    <property name="maxx">
      <column length="50" name="MAXX"/>
    </property>
    <property name="miny">
      <column length="50" name="MINY"/>
    </property>
    <property name="maxy">
      <column length="50" name="MAXY"/>
    </property>
    <property name="resx">
      <column length="50" name="RESX"/>
    </property>
    <property name="resy">
      <column length="50" name="RESY"/>
    </property>
  </class>
</hibernate-mapping>
