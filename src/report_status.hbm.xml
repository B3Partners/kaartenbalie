<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.kaartenbalie.core.server.reporting.domain.ThreadReportStatus" table="rep_status" >
        <id name="id" type="int" column="sta_id" >
            <generator class="native"/>
        </id>
        <many-to-one name="organization" column="sta_org_id" update="true" not-null="false"/>  
        <property name="reportId" column="sta_reportId"/>        
        <property name="creationDate" column="sta_creationDate"/>
        <property name="state" column="sta_state"/>
        <property name="statusMessage" column="sta_statusMessage" length="4000"/>     
    </class>
</hibernate-mapping>