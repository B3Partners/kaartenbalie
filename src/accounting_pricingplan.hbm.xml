<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.kaartenbalie.core.server.accounting.entity.LayerPricing" table="acc_layerpricing">
        
        <id name="id" type="int" column="lpr_id" >
            <generator class="native"/>
        </id>
        <!-- Losely Relational -->
        <property name="layerName">
            <column name="lpr_layerName"/>
        </property>  
        <property name="serverProviderPrefix">
            <column name="lpr_serverProviderPrefix"/>
        </property>  
        
        <property name="planType">
            <column name="lpr_planType"/>
        </property>  
        <property name="validFrom">
            <column name="lpr_validFrom"/>
        </property>  
        <property name="validUntil">
            <column name="lpr_validUntil"/>
        </property>  
        <property name="creationDate">
            <column name="lpr_creationDate" unique="true"/>
        </property>  
        <property name="deletionDate">
            <column name="lpr_deletionDate"/>
        </property> 
        <property name="layerIsFree">
            <column name="lpr_layerIsFree"/>
        </property>  
        <property name="unitPrice">
            <column name="lpr_unitPrice" precision="9" scale="2" />            
        </property>  
        <property name="indexCount">
            <column name="lpr_indexCount"/>
        </property>  
        <property name="service">
            <column name="lpr_service"/>
        </property>  
        <property name="operation">
            <column name="lpr_operation"/>
        </property>          
        <property name="minScale">
            <column name="lpr_minScale" precision="20" scale="10" />            
        </property>  
        <property name="maxScale">
            <column name="lpr_maxScale" precision="20" scale="10" />            
        </property>  
        <property name="projection">
            <column name="lpr_projection"/>            
        </property>  
    </class>
</hibernate-mapping> 