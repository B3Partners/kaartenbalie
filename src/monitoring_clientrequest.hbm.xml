<hibernate-mapping>
  <class name="nl.b3p.kaartenbalie.core.server.reporting.domain.requests.ClientRequest" table="mon_clientrequest">
    <id column="clr_id" name="id" type="int">
      <generator class="native"/>
    </id>
    <set name="serviceProviderRequests">
      <key column="spr_clr_id" not-null="false" update="true"/>
      <one-to-many class="nl.b3p.kaartenbalie.core.server.reporting.domain.requests.ServiceProviderRequest"/>
    </set>
    <set name="requestOperations">
      <key column="rqo_clr_id" not-null="false" update="true"/>
      <one-to-many class="nl.b3p.kaartenbalie.core.server.reporting.domain.operations.RequestOperation"/>
    </set>
    <property column="clr_clientRequestURI" length="4000" name="clientRequestURI"/>
    <property column="clr_timeStamp" name="timeStamp"/>
    <property column="clr_userId" name="userId"/>
    <property column="clr_method" name="method"/>
    <property column="clr_clientIp" name="clientIp"/>
    <property column="clr_service" name="service"/>
    <property column="clr_operation" name="operation"/>
    <property column="clr_organizationId" name="organizationId"/>
    <property column="clr_exceptionClass" name="exceptionClass"/>
    <property column="clr_exceptionMessage" length="4000" name="exceptionMessage"/>
  </class>
</hibernate-mapping>
