<hibernate-mapping>
  <class name="nl.b3p.kaartenbalie.core.server.accounting.entity.LayerPriceComposition" table="acc_pricecomp">
    <id column="prc_id" name="id" type="int">
      <generator class="native"/>
    </id>
    <many-to-one column="prc_tra_id" name="transactionLayerUsage"/>
    <property column="prc_serverProviderPrefix" name="serverProviderPrefix"/>
    <property column="prc_layerName" name="layerName"/>
    <property column="prc_calculationDate" name="calculationDate"/>
    <property column="prc_planType" name="planType"/>
    <property column="prc_service" name="service"/>
    <property column="prc_operation" name="operation"/>
    <property name="units">
      <column name="lpr_units" precision="5" scale="2"/>
    </property>
    <property name="scale">
      <column name="prc_scale" precision="20" scale="10"/>
    </property>
    <property column="prc_projection" name="projection"/>
    <property column="prc_layerIsFree" name="layerIsFree"/>
    <property column="prc_method" name="method"/>
    <property column="prc_calculationTime" name="calculationTime"/>
    <property name="layerPrice">
      <column name="lpr_layerPrice" precision="12" scale="2"/>
    </property>
  </class>
</hibernate-mapping>
