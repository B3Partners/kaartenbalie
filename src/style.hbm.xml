<hibernate-mapping>
  <class name="nl.b3p.wms.capabilities.Style" table="Style">
    <id column="STYLEID" name="id" type="int">
      <generator class="native"/>
    </id>
    <many-to-one column="LAYERID" name="layer" not-null="true"/>
    <set cascade="all" inverse="true" lazy="true" name="domainResource">
      <key column="STYLEID"/>
      <one-to-many class="nl.b3p.wms.capabilities.StyleDomainResource"/>
    </set>
    <property name="name">
      <column default="0" length="50" name="NAME" not-null="true"/>
    </property>
    <property name="title">
      <column default="0" length="255" name="TITLE" not-null="true"/>
    </property>
    <property name="abstracts" type="text">
      <column check="50" length="65530" name="ABSTRACTS"/>
    </property>
  </class>
</hibernate-mapping>
