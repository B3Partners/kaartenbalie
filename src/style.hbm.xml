<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.wms.capabilities.Style" table="Style">
    	<id name="id" type="int" column="STYLEID" >
            <generator class="native"/>
        </id>
        
        <many-to-one name="layer" column="LAYERID" not-null="true"/>
        
        <set name="domainResource" inverse="true" cascade="all" lazy="true">
            <key column="STYLEID"/>
            <one-to-many class="nl.b3p.wms.capabilities.StyleDomainResource"/>
        </set>
        
        <property name="name">
            <column name="NAME" not-null="true" default="0" length="50"/>
        </property>
        <property name="title">
            <column name="TITLE" not-null="true" default="0" length="255"/>
        </property>
        <property name="abstracts" type="text">
            <column name="ABSTRACTS" check="50" length="65530"/>
        </property>
    </class>
</hibernate-mapping>