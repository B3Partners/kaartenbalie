<FLAMINGO xmlns:fmc="fmc" lang="nl" languages="en,nl" tooltipdelay="300" commtojava="true" preloadtitle="Kaartenbalie" useexternalinterface="true">
    <style id=".tooltip" font-family="Verdana" font-size="11" color="#880000" display="block"/>
    <fmc:MonitorMap id="monitor" left="165" top="100" listento="mainMap">
       <string id="waiting"  en="Making... [layer] [percentage]%..." nl="Kaart aan het maken..."/>
    </fmc:MonitorMap>
    <fmc:ToolGroup tool="zoom" listento="mainMap" width="148" height="65" left="0" top="0">
        <fmc:ToolZoomin id="zoom"/>
        <fmc:ToolZoomout left="30"/>
        <fmc:ToolPan left="60"/>
        <fmc:ToolMeasure left="90"/>
        <!--fmc:ToolIdentify left="120"/-->
    </fmc:ToolGroup>                                                                                
    <fmc:BorderNavigation listento="mainMap" width="100%" height="100%" skin="f1"/>
    <fmc:Map id="mainMap" left="0" top="0" height="100%" width="100%" bottom="bottom" visible="true" extent="12000,304000,280000,620000">
        <fmc:LayerIdentifyIcon  id="identifyicon"  />
        <!--De onderstaande layer wordt steeds aangepast door de servlet zodat verschillende mappen kunnen worden getoond.-->
        <fmc:LayerOGWMS id="map" url="../wms/?SERVICE=WMS&amp;VERSION=1.1.1&amp;STYLES=" LAYERS="" QUERY_LAYERS="" srs="EPSG:28992"/>
    </fmc:Map>
    <fmc:Window  title="info" visible="false" canresize="true" defocusalpha="10" width="50%" height="50%" left="50%" top="0">
        <string id="title" nl="Informatie"  en="Information"/>
        <fmc:IdentifyResults  width="100%" height="100%" visible="true" listento="mainMap" />
    </fmc:Window>
</FLAMINGO>