<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">


<struts-config>
    <form-beans>
        <form-bean name="userForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="firstname" type="java.lang.String"/>
            <form-property name="lastname" type="java.lang.String"/>
            <form-property name="emailAddress" type="java.lang.String"/>
            <form-property name="username" type="java.lang.String"/>
            <form-property name="selectedRole" type="java.lang.String"/>
            <form-property name="selectedOrganization" type="java.lang.String"/>
            <form-property name="password" type="java.lang.String"/>
            <form-property name="userSelected" type="java.lang.String[]"/>
        </form-bean>
        
        <form-bean name="serverForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="serviceProviderGivenName" type="java.lang.String"/>
            <form-property name="serviceProviderUrl" type="java.lang.String"/>
            <form-property name="serviceProviderUpdatedDate" type="java.lang.String"/>
            <form-property name="serviceProviderReviewed" type="java.lang.String"/>
        </form-bean>
        
        <form-bean name="organizationForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="organizationid" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="name" type="java.lang.String"/>
            <form-property name="organizationStreet" type="java.lang.String"/>
            <form-property name="organizationNumber" type="java.lang.String"/>
            <form-property name="organizationAddition" type="java.lang.String"/>
            <form-property name="organizationPostalcode" type="java.lang.String"/>
            <form-property name="organizationProvince" type="java.lang.String"/>
            <form-property name="organizationCountry" type="java.lang.String"/>
            <form-property name="organizationPostbox" type="java.lang.String"/>
            <form-property name="organizationBillingAddress" type="java.lang.String"/>
            <form-property name="organizationVisitorsAddress" type="java.lang.String"/>
            <form-property name="organizationTelephone" type="java.lang.String"/>
            <form-property name="organizationFax" type="java.lang.String"/>
            <form-property name="organizationSelected" type="java.lang.String[]"/>
            <form-property name="layerSelected" type="java.lang.String"/>
            <form-property name="selectedLayers" type="java.lang.String[]"/>
        </form-bean>
        
    </form-beans>
    
    <global-exceptions>
    
    </global-exceptions>

    <global-forwards>
        
    </global-forwards>

    <action-mappings>
        <action path="/index" forward="base.beheer.index"/>
        
        <action path="/user" name="userForm" type="nl.b3p.kaartenbalie.struts.UserAction" scope="request" validate="false">  
            <forward name="success" path="base.beheer.user"/>
            <forward name="failure" path="base.beheer.user"/>
        </action>
        <action path="/server" name="serverForm" type="nl.b3p.kaartenbalie.struts.ServerAction" scope="request" validate="false">  
            <forward name="success" path="base.beheer.server"/>
            <forward name="failure" path="base.beheer.server"/>
        </action>
        <action path="/organization" name="organizationForm" type="nl.b3p.kaartenbalie.struts.OrganizationAction" scope="request" validate="false">  
            <forward name="success" path="base.beheer.organization"/>
            <forward name="failure" path="base.beheer.organization"/>
        </action>        
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="KaartenbalieResources"/>
    
    <!-- ========================= Tiles plugin ===============================-->
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml,/WEB-INF/tiles-beheer-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/conf/validation-beheer.xml"/>
        <set-property property="stopOnFirstError" value="false"/>
    </plug-in>
  
</struts-config>
