<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">


<struts-config>
    <form-beans>
        <form-bean name="registrationForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="firstname" type="java.lang.String"/>
            <form-property name="lastname" type="java.lang.String"/>
            <form-property name="emailAddress" type="java.lang.String"/>
            <form-property name="username" type="java.lang.String"/>
            <form-property name="password" type="java.lang.String"/>
            <form-property name="personalURL" type="java.lang.String"/>           

            <form-property name="name" type="java.lang.String"/>
            <form-property name="organizationStreet" type="java.lang.String"/>
            <form-property name="organizationNumber" type="java.lang.String"/>
            <form-property name="organizationAddition" type="java.lang.String"/>
            <form-property name="organizationPostalcode" type="java.lang.String"/>
            <form-property name="organizationProvince" type="java.lang.String"/>
            <form-property name="organizationCountry" type="java.lang.String"/>
            <form-property name="organizationPostbox" type="java.lang.String"/>
            <form-property name="organizationTelephone" type="java.lang.String"/>
            <form-property name="organizationFax" type="java.lang.String"/>
        </form-bean>
        
        <form-bean name="voegurltoeForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="userid" type="java.lang.String"/>
            <form-property name="serviceProviderGivenName" type="java.lang.String" initial="Standaard WMS"/>
            <form-property name="serviceProviderUrl" type="java.lang.String" initial="http://b3p-nando/cgi-bin/mapserv.exe?map=d:/public/aerogrid.map&amp;REQUEST=GetCapabilities&amp;VERSION=1.1.1&amp;SERVICE=WMS"/>
            <form-property name="serviceProviderUpdatedDate" type="java.lang.String"/>
            <form-property name="serviceProviderReviewed" type="java.lang.String"/>
            <form-property name="serviceProviderSelected" type="java.lang.String[]"/>
        </form-bean>
        
        <form-bean name="mapviewerForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="sortedDatasets" type="java.util.List"/>
            <form-property name="minx" type="java.lang.String" initial="20000"/>   
            <form-property name="miny" type="java.lang.String" initial="280000"/>
            <form-property name="maxx" type="java.lang.String" initial="280000"/>
            <form-property name="maxy" type="java.lang.String" initial="625000"/>
            <form-property name="selectedLayers" type="java.lang.String[]"/>
        </form-bean>
    </form-beans>
    
    <global-exceptions>
    
    </global-exceptions>

    <global-forwards>
        
    </global-forwards>

    <action-mappings>
        <action path="/index" forward="base.demo.index"/>
        
        <action path="/registration" name="registrationForm" type="nl.b3p.kaartenbalie.struts.DemoRegistrationAction" scope="request" validate="false">
            <forward name="success" path="base.demo.registration"/>
            <forward name="failure" path="base.demo.registration"/>
        </action>
        
        <action path="/voegurltoe" name="voegurltoeForm" type="nl.b3p.kaartenbalie.struts.ServerActionDemo" scope="request" validate="false">
            <forward name="success" path="base.demo.addUrl"/>
            <forward name="nextPage" path="base.demo.addUrlsuccessfull"/>
            <forward name="failure" path="base.demo.addUrl"/>
        </action>
        
        <action path="/mapviewer" name="mapviewerForm" type="nl.b3p.kaartenbalie.struts.MapviewerAction" scope="request" validate="false">  
            <forward name="success" path="base.demo.mapviewer"/>
            <forward name="failure" path="base.demo.index"/>
        </action>
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="KaartenbalieResources"/>
    
    <!-- ========================= Tiles plugin ===============================-->
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml,/WEB-INF/tiles-demo-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/conf/validation-demo.xml"/>
        <set-property property="stopOnFirstError" value="false"/>
    </plug-in>
  
</struts-config>
