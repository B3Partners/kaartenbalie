<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">


<struts-config>
    <form-beans>
    
    </form-beans>
    
    <global-exceptions>
    
    </global-exceptions>

    <global-forwards>
        <forward name="success"  path="/index.do"/>
    </global-forwards>

    <action-mappings>
        <action path="/index" forward="base.algemeen.index"/>
        <action path="/norights" forward="base.algemeen.norights"/>
        <action path="/invalidlogin" forward="base.algemeen.invalidlogin"/>
        <action path="/login" forward="base.algemeen.login"/>
        <action path="/viewer" forward="/viewer/index.do"/>
        <action path="/beheer" forward="/beheer/index.do"/>
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <!-- ========================= Tiles plugin ===============================-->
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml,/WEB-INF/tiles-algemeen-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
        property="pathnames"
        value="/WEB-INF/validator-rules.xml,/WEB-INF/conf/validation-default.xml"/>
    </plug-in>
  
</struts-config>
