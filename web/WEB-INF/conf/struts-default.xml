<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">


<struts-config>
    <form-beans>
        <form-bean name="metadataForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="selectedLayers" type="java.lang.String[]"/>
            <form-property name="name" type="java.lang.String"/>            
            <form-property name="metadata" type="java.lang.String"/>
            <form-property name="mailhost" type="java.lang.String" initial="mail.b3partners.nl"/>
            <form-property name="xsl" type="java.lang.String"/>
            <form-property name="to" type="java.lang.String"/>
            <form-property name="from" type="java.lang.String"/>
            <form-property name="subject" type="java.lang.String"/>
            <form-property name="cc" type="java.lang.String"/>
            <form-property name="bcc" type="java.lang.String"/>
            <form-property name="body" type="java.lang.String"/>
            <form-property name="fullname" type="java.lang.String"/>
            <form-property name="company" type="java.lang.String"/>
            <form-property name="address" type="java.lang.String"/>
            <form-property name="zipcode" type="java.lang.String"/>
            <form-property name="city" type="java.lang.String"/>
            <form-property name="country" type="java.lang.String"/>
            <form-property name="phone" type="java.lang.String"/>
            <form-property name="fax" type="java.lang.String"/>
        </form-bean>
        
    </form-beans>
    
    <global-exceptions>
    
    </global-exceptions>

    <global-forwards>
        <forward name="success"  path="/index.do"/>
    </global-forwards>

    <action-mappings>
        <action path="/index" forward="base.algemeen.index"/>
        <action path="/login" forward="base.algemeen.login"/>
        <action path="/loginError" type="nl.b3p.kaartenbalie.struts.LoginAction">
            <forward name="success" path="base.algemeen.login"/>
        </action>
        <action path="/logout" type="nl.b3p.kaartenbalie.struts.LogoutAction">
            <forward name="success" path="/index.do" redirect="true"/>
        </action>
        
        <action path="/viewer" forward="/viewer/index.do"/>
        <action path="/beheer" forward="/beheer/index.do"/>
        <action path="/demo" forward="/demo/index.do"/>
        
        <action path="/metadata" name="metadataForm" type="nl.b3p.kaartenbalie.struts.MetadataAction" scope="request" validate="false">
            <forward name="success" path="base.algemeen.metadata"/>
            <forward name="failure" path="base.algemeen.metadata"/>
        </action>
        <action path="/editmetadata" name="metadataForm" type="nl.b3p.kaartenbalie.struts.MetadataAction" scope="request" validate="false">
            <forward name="success" path="base.algemeen.editmetadata"/>
            <forward name="failure" path="base.algemeen.editmetadata"/>
        </action>
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="KaartenbalieResources"/>

    <!-- ========================= Tiles plugin ===============================-->
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/conf/tiles-algemeen-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
        property="pathnames"
        value="/WEB-INF/validator-rules.xml,/WEB-INF/conf/validation-default.xml"/>
    </plug-in>
  
</struts-config>
