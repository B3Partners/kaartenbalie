<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
    <global>
        <constant>
            <constant-name>numberMask</constant-name>
            <constant-value>^[-\+]?[0-9]*[,\.]?[0-9]*$</constant-value>
        </constant>
    </global>
    
    <formset>
        <form name="userForm">
            <field property="firstname" depends="required, maxlength"> <!-- required -->
                <arg0 key="beheer.firstname"/>
            </field>
            <field property="surname" depends="required, maxlength"> <!-- required -->
                <arg0 key="beheer.surname"/>
            </field>
            <field property="emailAddress" depends="required, maxlength"> <!-- required -->
                <arg0 key="beheer.emailAddress"/>
            </field>
            <field property="username" depends="required, maxlength"> <!-- required -->
                <arg0 key="beheer.username"/>
            </field>
            <field property="password" depends="required, maxlength"> <!-- required -->
                <arg0 key="beheer.password"/>
            </field>
        </form>
        
        <form name="serverForm">
            <field property="givenName" depends="required"> <!-- required -->
                <arg0 key="beheer.serviceProviderGivenName"/>
            </field>
            <field property="url" depends="required"> <!-- required -->
                <arg0 key="beheer.serviceProviderUrl"/>
            </field>
        </form>
        
        <form name="organizationForm">
            <field property="name" depends="required"> <!-- required -->
                <arg0 key="beheer.name"/>
            </field>
            <field property="telephone" depends="required"> <!-- required -->
                <arg0 key="beheer.organizationTelephone"/>
            </field>           
        </form>
        
        <!-- demo -->
        <form name="registrationForm">
            <field property="firstname" depends="required"> <!-- required -->
                <arg0 key="beheer.firstname"/>
            </field>
            <field property="surname" depends="required"> <!-- required -->
                <arg0 key="beheer.surname"/>
            </field>
            <field property="emailAddress" depends="required, email"> <!-- required -->
                <arg0 key="beheer.emailAddress"/>
            </field>
            <field property="username" depends="required"> <!-- required -->
                <arg0 key="beheer.username"/>
            </field>
            <field property="password" depends="required, minlength, maxlength"> <!-- required -->
                <arg0 key="beheer.password"/>
                <arg1 name="minlength" key="${var:minlength}" resource="false"/>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>6</var-value>
                </var>
                
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>15</var-value>
                </var>
            </field>
            <field property="repeatpassword" depends="required"> <!-- required -->
                <arg0 key="beheer.repeatpassword"/>
            </field>
            <field property="organizationName" depends="required"> <!-- required -->
                <arg0 key="beheer.name"/>
            </field>
            <field property="organizationTelephone" depends="required"> <!-- required -->
                <arg0 key="beheer.organizationTelephone"/>
            </field>            
        </form>
        
        <form name="profileForm">
            <field property="registeredIP" depends="required"> <!-- required -->
                <arg0 key="viewer.persoonlijkeurl.registeredip"/>
            </field>
            <field property="timeout" depends="required, date"> <!-- required -->
                <arg0 key="viewer.persoonlijkeurl.timeout"/>
                <var>
                    <var-name>datePatternStrict</var-name>
                    <var-value>yyyy/MM/dd</var-value>
                </var>
            </field>          
        </form>
        <!-- viewer -->
        <form name="changeProfileForm">
            <field property="newpassword" depends="minlength, maxlength"> <!-- Email validatie -->
                <arg0 key="viewer.persoonlijkeurl.nieuwpw"/>
                <arg1 name="minlength" key="${var:minlength}" resource="false"/>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>6</var-value>
                </var>
                
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>15</var-value>
                </var>
            </field>
            <field property="emailaddress" depends="email"> <!-- Email validatie -->
                <arg0 key="viewer.profile.email"/>
            </field>
        </form>
        
        <form name="createPersonalURLForm">
            <field property="registeredIP" depends="required"> <!-- required -->
                <arg0 key="viewer.persoonlijkeurl.registeredip"/>
            </field>
            <field property="timeout" depends="required, date"> <!-- required -->
                <arg0 key="viewer.persoonlijkeurl.timeout"/>
                <var>
                    <var-name>datePatternStrict</var-name>
                    <var-value>yyyy/MM/dd</var-value>
                </var>
            </field>
        </form>
        
        <form name="wmsUrlCreatorForm">
            <field property="height" depends="required, integer"> <!-- required -->
                <arg0 key="viewer.getmapurl.height"/>
            </field>
            <field property="width" depends="required, integer"> <!-- required -->
                <arg0 key="viewer.getmapurl.width"/>
            </field>
            <field property="bbox" depends="required"> <!-- required -->
                <arg0 key="viewer.getmapurl.bbox"/>
            </field>
        </form>
        
        
    </formset>
</form-validation>
