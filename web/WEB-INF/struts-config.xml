<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">


<struts-config>
    <form-beans>
        <form-bean name="userForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="firstname" type="java.lang.String"/>
            <form-property name="surname" type="java.lang.String"/>
            <form-property name="emailAddress" type="java.lang.String"/>
            <form-property name="username" type="java.lang.String"/>
            <form-property name="selectedOrganization" type="java.lang.String"/>
            <form-property name="password" type="java.lang.String"/>
            <form-property name="repeatpassword" type="java.lang.String"/>
            <form-property name="roleSelected" type="java.lang.String[]"/>
        </form-bean>
        
        <form-bean name="serverForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="givenName" type="java.lang.String"/>
            <form-property name="url" type="java.lang.String"/>
            <form-property name="updatedDate" type="java.lang.String"/>
        </form-bean>
        
        <form-bean name="organizationForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="name" type="java.lang.String"/>
            <form-property name="street" type="java.lang.String"/>
            <form-property name="number" type="java.lang.String"/>
            <form-property name="addition" type="java.lang.String"/>
            <form-property name="postalcode" type="java.lang.String"/>
            <form-property name="province" type="java.lang.String"/>
            <form-property name="country" type="java.lang.String"/>
            <form-property name="postbox" type="java.lang.String"/>
            <form-property name="billingAddress" type="java.lang.String"/>
            <form-property name="visitorsAddress" type="java.lang.String"/>
            <form-property name="telephone" type="java.lang.String"/>
            <form-property name="fax" type="java.lang.String"/>
            <form-property name="selectedLayers" type="java.lang.String[]"/>
        </form-bean>
        
        <form-bean name="metadataForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="selectedLayers" type="java.lang.String[]"/>
            <form-property name="name" type="java.lang.String"/>            
            <form-property name="metadata" type="java.lang.String"/>
        </form-bean>
        
        <form-bean name="registrationForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="firstname" type="java.lang.String"/>
            <form-property name="surname" type="java.lang.String"/>
            <form-property name="emailAddress" type="java.lang.String"/>
            <form-property name="username" type="java.lang.String"/>
            <form-property name="password" type="java.lang.String"/>
            <form-property name="repeatpassword" type="java.lang.String"/>
            <form-property name="personalURL" type="java.lang.String"/>
            <form-property name="selectedOrganization" type="java.lang.String"/>            
            <form-property name="organizationName" type="java.lang.String"/>
            <form-property name="organizationTelephone" type="java.lang.String"/>
            <form-property name="roleSelected" type="java.lang.String[]"/>
        </form-bean>
        
         <form-bean name="voegurltoeForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="userid" type="java.lang.String"/>
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="givenName" type="java.lang.String"/>
            <form-property name="url" type="java.lang.String"/>
            <form-property name="updatedDate" type="java.lang.String"/>
        </form-bean>
        
        <form-bean name="profileForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="firstname" type="java.lang.String"/>
            <form-property name="surname" type="java.lang.String"/>
            <form-property name="username" type="java.lang.String"/>
            <form-property name="emailaddress" type="java.lang.String"/>
            <form-property name="role" type="java.lang.String"/>
            <form-property name="personalURL" type="java.lang.String"/>
            <form-property name="registeredIP" type="java.lang.String"/>
            <form-property name="timeout" type="java.lang.String"/>
        </form-bean>
        
        <form-bean name="mapviewerForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="sortedDatasets" type="java.util.List"/>
            <form-property name="minx" type="java.lang.String" initial="20000"/>   
            <form-property name="miny" type="java.lang.String" initial="280000"/>
            <form-property name="maxx" type="java.lang.String" initial="280000"/>
            <form-property name="maxy" type="java.lang.String" initial="625000"/>
            <form-property name="selectedLayers" type="java.lang.String[]"/>
            <form-property name="helpOn_Off" type="java.lang.Boolean" />
        </form-bean>
        
        <form-bean name="changeProfileForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->  
            <form-property name="firstname" type="java.lang.String"/>
            <form-property name="surname" type="java.lang.String"/>
            <form-property name="username" type="java.lang.String"/>
            <form-property name="role" type="java.lang.String"/>            
            <form-property name="newpassword" type="java.lang.String"/>
            <form-property name="newpasswordretyped" type="java.lang.String"/>
            <form-property name="emailaddress" type="java.lang.String"/>
        </form-bean>
        
        <form-bean name="createPersonalURLForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- hidden -->
            <form-property name="id" type="java.lang.String"/>
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- user form fields-->
            <form-property name="firstname" type="java.lang.String"/>
            <form-property name="surname" type="java.lang.String"/>
            <form-property name="username" type="java.lang.String"/>
            <form-property name="emailaddress" type="java.lang.String"/>
            <form-property name="role" type="java.lang.String"/>
            <form-property name="personalURL" type="java.lang.String"/>
            <form-property name="registeredIP" type="java.lang.String[]"/>
            <form-property name="currentaddress" type="java.lang.String"/>
            <form-property name="timeout" type="java.lang.String"/>
        </form-bean>
        
        <form-bean name="wmsUrlCreatorForm" type="org.apache.struts.validator.DynaValidatorForm">
            <!-- nodig voor crud action-->
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <!-- in form -->
            <form-property name="personalUrl" type="java.lang.String"/>
            <form-property name="selectedLayers" type="java.lang.String[]"/>
            <form-property name="sortedLayers" type="java.lang.String[]"/>
            <form-property name="selectedProjectie" type="java.lang.String"/>
            <form-property name="bbox" type="java.lang.String"/>
            <form-property name="height" type="java.lang.Integer" initial="400"/>
            <form-property name="width" type="java.lang.Integer" initial="300"/>
            <form-property name="selectedFormat" type="java.lang.String"/>
            <form-property name="defaultGetMap" type="java.lang.String"/>
        </form-bean>
   </form-beans>
    
    <global-exceptions>
    
    </global-exceptions>

    <global-forwards>
        <forward name="success"  path="/index.do"/>
    </global-forwards>

    <action-mappings>
        <!-- default -->
        <action path="/index" forward="base.algemeen.index"/>
        <action path="/norights" forward="base.algemeen.norights"/>
        <action path="/invalidlogin" forward="base.algemeen.invalidlogin"/>
        <action path="/login" forward="base.algemeen.login"/>
        
        <!-- beheer -->
        <action path="/beheer" forward="base.beheer.index"/>
        
        <action path="/beheer/user" name="userForm" type="nl.b3p.kaartenbalie.struts.UserAction" scope="request" validate="false">  
            <forward name="success" path="base.beheer.user"/>
            <forward name="failure" path="base.beheer.user"/>
        </action>
        <action path="/beheer/server" name="serverForm" type="nl.b3p.kaartenbalie.struts.ServerAction" scope="request" validate="false">  
            <forward name="success" path="base.beheer.server"/>
            <forward name="failure" path="base.beheer.server"/>
        </action>
        <action path="/beheer/organization" name="organizationForm" type="nl.b3p.kaartenbalie.struts.OrganizationAction" scope="request" validate="false">  
            <forward name="success" path="base.beheer.organization"/>
            <forward name="failure" path="base.beheer.organization"/>
        </action>

        <action path="/beheer/metadata" name="metadataForm" type="nl.b3p.kaartenbalie.struts.MetadataAction" scope="request" validate="false">
            <forward name="success" path="base.beheer.metadata"/>
            <forward name="failure" path="base.beheer.metadata"/>
        </action>
        <action path="/beheer/editmetadata" name="metadataForm" type="nl.b3p.kaartenbalie.struts.MetadataAction" scope="request" validate="false">
            <forward name="success" path="base.beheer.editmetadata"/>
            <forward name="failure" path="base.beheer.editmetadata"/>
        </action>

        <!-- demo -->
        <action path="/demo" forward="base.demo.index"/>
        
        <action path="/demo/registration" name="registrationForm" type="nl.b3p.kaartenbalie.struts.DemoRegistrationAction" scope="request" validate="false">
            <forward name="success" path="base.demo.registration"/>
            <forward name="savesucceeded" path="base.demo.registrationsuccessfull"/>
            <forward name="failure" path="base.demo.registration"/>
        </action>
        
        <action path="/demo/voegurltoe" name="voegurltoeForm" type="nl.b3p.kaartenbalie.struts.ServerActionDemo" scope="request" validate="false">
            <forward name="success" path="base.demo.addUrl"/>
            <forward name="nextPage" path="base.demo.addUrlsuccessfull"/>
            <forward name="failure" path="base.demo.addUrl"/>
            <forward name="automatic" path="base.demo.mapviewer"/>
        </action>
        
        <action path="/demo/showProfile" name="profileForm" type="nl.b3p.kaartenbalie.struts.CreatePersonalURLAction" scope="request" validate="false">  
            <forward name="success" path="base.demo.profile"/>
            <forward name="failure" path="base.demo.profile"/>
        </action>
         
        <!-- viewer -->
        <action path="/viewer" forward="base.viewer.index"/>
        <action path="/mapviewer" name="mapviewerForm" type="nl.b3p.kaartenbalie.struts.MapviewerAction" scope="request" validate="false">  
            <forward name="success" path="base.viewer.mapviewer"/>
            <forward name="failure" path="base.viewer.mapviewer"/>
        </action>
        <action path="/viewer/changeProfile" name="changeProfileForm" type="nl.b3p.kaartenbalie.struts.ChangeProfileAction" scope="request" validate="false">  
            <forward name="success" path="base.viewer.changeprofile"/>
            <forward name="failure" path="base.viewer.changeprofile"/>
        </action>
        <action path="/viewer/createPersonalURL" name="createPersonalURLForm" type="nl.b3p.kaartenbalie.struts.CreatePersonalURLAction" scope="request" validate="false">  
            <forward name="success" path="base.viewer.createurl"/>
            <forward name="failure" path="base.viewer.createurl"/>
        </action>
        <action path="/viewer/wmsUrlCreator" name="wmsUrlCreatorForm" scope="request" type="nl.b3p.kaartenbalie.struts.WMSUrlCreatorAction" validate="false">
            <forward name="success" path="base.viewer.creategetmapurl"/>
            <forward name="failure" path="base.viewer.creategetmapurl"/>
        </action>
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources  parameter="KaartenbalieResources" null="true" />
    
    <!-- ========================= Tiles plugin ===============================-->
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs-cvl.xml" />      
        <set-property property="moduleAware" value="false" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
        property="pathnames"
        value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
  
</struts-config>
