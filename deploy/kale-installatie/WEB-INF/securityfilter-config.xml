<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE securityfilter-config PUBLIC
    "-//SecurityFilter.org//DTD Security Filter Configuration 2.0//EN"
    "http://www.securityfilter.org/dtd/securityfilter-config_2_0.dtd">

<securityfilter-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                kaartenbalie Collection 0
            </web-resource-name>
            <url-pattern>/beheer*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>beheerder</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                kaartenbalie Collection 1
            </web-resource-name>
            <url-pattern>/viewer*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>beheerder</role-name>
            <role-name>gebruiker</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Geen demogebruiker -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                kaartenbalie Collection 2
            </web-resource-name>
            <url-pattern>/demo*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>beheerder</role-name>
        </auth-constraint>
    </security-constraint>
    
    <!-- Aanzetten indien wel demo
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                kaartenbalie Collection 2
            </web-resource-name>
            <url-pattern>/demo/createPersonalURL.do</url-pattern>
            <url-pattern>/demo/voegurltoe.do</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>beheerder</role-name>
            <role-name>gebruiker</role-name>
            <role-name>demogebruiker</role-name>
        </auth-constraint>
    </security-constraint> -->

    <login-config>
        <auth-method>FORM_COOKIE_TOKEN</auth-method>
        <form-login-config>
          <form-login-page>/login.do</form-login-page>
          <form-error-page>/loginError.do</form-error-page>
          <form-default-page>/index.do</form-default-page>
          <form-logout-page>/logout.do</form-logout-page>
        </form-login-config>
        <cookie-auth-token-config>
            <set-cookies>false</set-cookies>
            <accept-cookie>true</accept-cookie>
			<!-- Website to generate these strings https://www.grc.com/passwords.htm -->
            <!-- 32 hexadecimal characters -->
            <secret-key>A69B66F2D17EE7F32490B90DD463AF9E</secret-key>
			<!-- an arbitrary length of alpha-numeric characters -->
            <extra-hash-string>fQ6AKO0cRI7YWwEa</extra-hash-string>
            <cookie-expire>28800</cookie-expire>
        </cookie-auth-token-config>
    </login-config>

    <realm className="nl.b3p.kaartenbalie.service.SecurityRealm"/>
</securityfilter-config>