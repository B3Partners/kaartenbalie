<?xml version="1.0" encoding="UTF-8"?>
<Context path="/kaartenbalie" antiJARLocking="true">
	<Resource auth="Container" driverClassName="org.postgresql.Driver" logAbandoned="true" maxActive="100" maxIdle="30" maxWait="10000" name="jdbc/kaartenbalie" username="agentschapnl" password="***REMOVED***" removeAbandoned="true" removeAbandonedTimeout="60" type="javax.sql.DataSource" url="jdbc:postgresql://localhost:5432/agnl_acc_kaartenbalie" validationQuery="select 1" minEvictableIdleTimeMillis="10000" timeBetweenEvictionRunsMillis="60000"/>
