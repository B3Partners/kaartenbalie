<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="nl.b3p.kaartenbalie.core.server.datawarehousing.domain.DataMappingTemplate" table="wah_datamapping" discriminator-value="template">
        
        <id name="id" type="int" column="edm_id" >
            <generator class="native"/>
        </id>
        <discriminator column="edm_discriminator" type="string" />
        <many-to-one name="warehousedEntity" column="edm_wae_id" update="true" not-null="false"/>        
        <property name="fieldReference" column="edm_fieldReference" index="edm_fieldReference_index"/>
        <subclass name="nl.b3p.kaartenbalie.core.server.datawarehousing.domain.StringDataMapping" discriminator-value="stringmapping">
            <property name="stringValue" column="edm_stringValue" length="4000"/>
        </subclass>
        <subclass name="nl.b3p.kaartenbalie.core.server.datawarehousing.domain.IntegerDataMapping" discriminator-value="integermapping">
            <property name="integerValue" column="edm_integerValue"/>
        </subclass>
        <subclass name="nl.b3p.kaartenbalie.core.server.datawarehousing.domain.DateDataMapping" discriminator-value="datemapping">
            <property name="dateValue" column="edm_dateValue"/>
        </subclass>        

    </class>
</hibernate-mapping>